@model mayka.Models.MPurchase

@{
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
    ViewData["Title"] = "Edit";
}

<h2>Заказы</h2>

<h4>Изменение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DateDelivery" class="control-label">Дата прибытия</label>
                <input asp-for="DateDelivery" class="form-control" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        Выполненный
                        <input asp-for="Completed" /> @Html.DisplayNameFor(model => model.Completed)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

