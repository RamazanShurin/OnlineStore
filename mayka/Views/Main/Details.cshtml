@model mayka.Models.MProduct
@{
    ViewData["Title"] = Model.Title;
}
<div style="margin-top: 25px;">
    <a asp-action="Index" class="link2S"><i class="fab fa-elementor"></i> Назад в каталог</a>
    <a asp-action="Index" class="link3S">Главная</a> —
    <a href="#" class="link3S">@Model.Type</a> —
    <a href="#" class="link3S">@Model.Category.Title</a>
    <hr />
    <div class="row" style="margin-top: 10px;">
        <div class="col-lg-6">
            @if (Model.Img != null)
            {
                <div class="block6S" id="image1">


                    <img src="~/Images/@Model.Img" alt="@Model.Title" class="img6S" />
                    <div class="block44S"></div>
                    <div class="block37S"></div>
                    <div class="block38S" onclick="imageSelect(1)" style="border: 2px solid #9b2f53; background-image: url(/Images/@Model.Img);">
                    </div>
                    <div class="block39S" onclick="imageSelect(2)" style="background-image: url(/Images/@Model.ImgBack);">
                    </div>
                </div>
                <div class="block6S" id="image2" style="display: none;">
                    <img src="~/Images/@Model.ImgBack" alt="@Model.Title" class="img6S" />
                    <div class="block44S"></div>
                    <div class="block37S"></div>
                    <div class="block38S" onclick="imageSelect(1)" style="background-image: url(/Images/@Model.Img);">
                    </div>
                    <div class="block39S" onclick="imageSelect(2)" style="border: 2px solid #9b2f53; background-image: url(/Images/@Model.ImgBack);">
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-6">
            <div class="block7S">
                <form asp-action="Buy" asp-controller="Cart">
                    <div class="row">
                        <div class="col-7">
                            <div class="block9S">
                                <label class="label4S">@Model.Title</label>
                                <br>
                                <label class="label5S">Артикул: @Model.Id</label>
                                <br>
                                <label class="label6S">Размеры:</label>
                                <a href="#" id="go" class="link4S">(Узнать размер)</a>
                            </div>
                            <label class="block8S" onclick="Size('Ssize')">S</label>
                            <input style="display: none;" type="radio" value="S" id="Ssize" name="Size" required />
                            <label class="block8S" style="color: white; background: #9b2f53" onclick="Size('Msize')">M</label>
                            <input style="display: none;" type="radio" value="M" id="Msize" name="Size" checked />
                            <label class="block8S" onclick="Size('Lsize')">L</label>
                            <input style="display: none;" type="radio" value="L" id="Lsize" name="Size" />
                            <label class="block8S" onclick="Size('XLsize')">XL</label>
                            <input style="display: none;" type="radio" value="XL" id="XLsize" name="Size" />
                            <label class="block8S" onclick="Size('XXLsize')">XXL</label>
                            <input style="display: none;" type="radio" value="XXL" id="XXLsize" name="Size" />
                            <label class="block8S" onclick="Size('XXXLsize')">XXXL</label>
                            <input style="display: none;" type="radio" value="XXXL" id="XXXLsize" name="Size" />
                        </div>
                        <div class="col-5">
                            <div class="block9S">
                                <label class="label23S">
                                    @Model.Discount @Model.Currency.
                                </label>
                                <label class="label7S">
                                    @Model.Price @Model.Currency.
                                </label>
                            </div>

                            <input type="hidden" value="@Model.Id" name="id" />
                            <input type="submit" value="В корзину" class="btn btn-success buttonS" />
                        </div>
                    </div>
                </form>
                @if (ViewBag.OtherProducts.Count > 0)
                {
                    <hr />
                    <label class="label16S">Другие похожие товары:</label>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-1" style="padding-top: 45px; ">
                            <button class="prev"></button>
                        </div>
                        <div class="col-9" style="padding: 0;">
                            <div class="container2">
                                <ul class="carousel2">
                                    @foreach (var item in ViewBag.OtherProducts)
                                    {
                                        <li>
                                            @if (item.Type != "Кружка")
                                            {
                                                <a asp-action="Details" asp-controller="Main" asp-route-id="@item.Id">
                                                    @if (item.Img != null)
                                                    {
                                                        <img src="~/Images/@item.Img" class="img7S" />
                                                    }
                                                    <br />
                                                    <label class="label5S">@item.Title</label>
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-action="DetailsCup" asp-controller="Main" asp-route-id="@item.Id">
                                                    @if (item.Img != null)
                                                    {
                                                        <img src="~/Images/@item.Img" class="img7S" />
                                                    }
                                                    <br />
                                                    <label class="label5S">@item.Title</label>
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="col-1" style="padding-top: 45px;">
                            <button class="next">></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <hr />
    <div class="block11S">
