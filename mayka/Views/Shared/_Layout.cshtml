    <script>
        $(document).ready(function () {
            if (window.innerWidth > 1000) {
                $('body').append('<div id="go-top" title="Вверх"><i class="fas fa-angle-up"></i><br>Наверх</div>');
            }
        });

        $(function () {
            $.fn.scrollToTop = function () {
                $(this).hide().removeAttr("href");
                if ($(window).scrollTop() >= "250") $(this).fadeIn("slow")
                var scrollDiv = $(this);
                $(window).scroll(function () {
                    if ($(window).scrollTop() <= "250") $(scrollDiv).fadeOut("slow")
                    else $(scrollDiv).fadeIn("slow")
                });
                $(this).click(function () {
                    $("html, body").animate({
                        scrollTop: 0
                    }, "slow")
                })
            }
        });

        $(function () {
            $("#go-top").scrollToTop();
        });
    </script>

    <script>
        var cartCount = '@HttpContextAccessor.HttpContext.Session.GetString("cartCount")';
        if (cartCount != 0) {
            $('#cartCount').text(cartCount);
        }
    </script>
    <script>
        $(() => {
            //On Scroll Functionality
            $(window).scroll(() => {
                var windowTop = $(window).scrollTop();
                windowTop > 50
                    ? $(".navS2").addClass("navShadow")
                    : $(".navS2").removeClass("navShadow");
                windowTop > 50 ? $(".ulS2").css("top", "45px") : $(".ulS2").css("top", "45px");
            });


            //Toggle Menu
            $("#menu-toggle").on("click", () => {
                $("#menu-toggle").toggleClass("closeMenu");
                $(".ulS2").toggleClass("showMenu");

                $(".liS2").on("click", () => {
                    $(".ulS2").removeClass("showMenu");
                    $("#menu-toggle").removeClass("closeMenu");
                });
            });
        });
    </script>
